<div class="ui middle aligned center aligned grid">
  <div class="column" style="width: auto;">
    <h2 class="ui teal image header">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <form class="ui large form" id="login" method="post">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input id="email" type="email" name="email" placeholder="E-mail address">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input id="pass" type="password" name="password" placeholder="Password">
          </div>
        </div>

        <div class="ui error message msj" style="display: none;">
          <i class="close icon"></i>
          <div class="header">
            Ocurrio un error!
          </div>
          El usuario o contrase√±a son incorrectos.
        </div>

        <input class="ui fluid large teal submit button" onclick="sends(event)" type="submit" value="Login">
      </div>

    </form>

    <div class="ui message">
      New to us? <a href="#">Sign Up</a>
    </div>
  </div>
</div>

<script type="text/javascript">

function sends(event) {
  event.preventDefault()
  const myPost = {
    email: $('#email').val(),
    password: $('#pass').val()
  }

  const options = {
    method: 'POST',
    body: JSON.stringify(myPost),
    headers: {
      'Content-Type': 'application/json'
    }
  };

  fetch('/api/signin', options)
    .then(res => res.json())
    .then(data => {
      localStorage.setItem('token', data.token)
      if(data.estado)
        window.location.replace("../");
      else
        $('.msj').show()
    })

  $( ".close" ).click(function() {
    $('.msj').hide()
  });
}

</script>